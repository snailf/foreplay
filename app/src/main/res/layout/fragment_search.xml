<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >
    <!-- header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/white" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_header_input_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/search_input_margin_left"
            android:layout_marginRight="@dimen/search_input_margin_left"
            android:background="@drawable/stone_shape_corner_gray"
            >
            <RelativeLayout
                android:id="@+id/search_rl"
                android:layout_width="@dimen/search_button_rl_width"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="@dimen/search_button_width"
                    android:layout_height="@dimen/search_button_height"
                    android:background="@drawable/foot_search_xml"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <EditText
                android:id="@+id/key"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search_input_hint"
                android:textColorHint="@color/gray"
                android:text=""
                android:textColor="@color/balck"
                android:gravity="left|center_vertical"
                android:background="@color/transparent"
                android:layout_marginLeft="@dimen/search_input_margin_left"
                android:layout_marginRight="@dimen/search_input_margin_left"
                android:layout_toLeftOf="@id/search_rl"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <!-- 关键词 -->
    <RelativeLayout
        android:id="@+id/content"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/index_content_bg"
        >
        <cc.dingding.snail.forepaly.app.graphics.RandomView
            android:id="@+id/myrandom_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/index_content_bg"
            />
    </RelativeLayout>
    <!-- 搜索结果 -->
    <RelativeLayout
        android:id="@+id/search_result_rl"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/index_content_bg"
        android:visibility="gone"
        >
        <cc.dingding.snail.forepaly.app.views.xlist.XListView
            android:id="@+id/xlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent"
            >

        </cc.dingding.snail.forepaly.app.views.xlist.XListView>
    </RelativeLayout>
    <!-- 消息提示框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:id="@+id/message_rl"
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/light_white"
            android:text=""
            android:gravity="center"
            android:textColor="@color/index_pop_text_color"
            android:textSize="15dip"
            android:shadowColor="@color/index_pop_text_color"
            android:shadowRadius="5"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:background="@drawable/text_shadow"
            />
    </LinearLayout>
</RelativeLayout>