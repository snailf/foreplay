<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    >
    <RelativeLayout
        android:id="@+id/login_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/login_button_gap_left"
        android:layout_marginRight="@dimen/login_button_gap_left"
        android:layout_marginBottom="@dimen/login_button_gap_top"
        >
        <TextView
            android:id="@+id/douban"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_marginBottom="@dimen/login_button_gap_top"
            android:background="@drawable/login_input"
            android:text="豆瓣登录"
            android:gravity="center"
            android:textColor="@color/login_text_color_xml"
            android:textSize="@dimen/login_button_font_size"
            />
        <TextView
            android:id="@+id/weibo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_marginBottom="@dimen/login_button_gap_top"
            android:background="@drawable/login_input"
            android:text="微博登录"
            android:gravity="center"
            android:textColor="@color/login_text_color_xml"
            android:textSize="@dimen/login_button_font_size"
            android:layout_below="@id/douban"
            />
        <TextView
            android:id="@+id/qq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_marginBottom="@dimen/login_button_gap_top"
            android:background="@drawable/login_input"
            android:text="QQ登录"
            android:gravity="center"
            android:textColor="@color/login_text_color_xml"
            android:textSize="@dimen/login_button_font_size"
            android:layout_below="@id/weibo"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_above="@id/login_rl"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            >
            <RelativeLayout
                android:id="@+id/logo_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_logo_height"
                android:background="@color/transparent"
                >
                <RelativeLayout
                    android:id="@+id/left_gap"
                    android:layout_width="26dip"
                    android:layout_height="@dimen/login_logo_height"
                    android:background="@color/transparent"
                    >
                </RelativeLayout>
                <RelativeLayout
                    android:layout_toRightOf="@id/left_gap"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_logo_height"
                    android:background="@color/transparent"
                    >
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/login_logo_width"
                        android:layout_height="@dimen/login_logo_height"
                        android:background="@drawable/login_logo"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_below="@id/logo_rl"
                android:layout_marginTop="0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/login_text_size"
                android:textColor="@color/login_text_color"
                android:text="@string/app_name"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>