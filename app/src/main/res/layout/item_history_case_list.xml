<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="300dip"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        >

        <RelativeLayout
            android:id="@+id/right_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/personal_case_history_margin"
            android:layout_marginRight="@dimen/personal_case_history_margin"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_iamge_height"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:id="@+id/rtop"
                >
                <LinearLayout
                    android:id="@+id/left_rl"
                    android:layout_width="@dimen/personal_case_app_list_left_width"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/timeline"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/personal_case_history_margin"
                        android:text="7.12"
                        android:textColor="@color/personal_tab_text"
                        android:textSize="@dimen/personal_tab_text_size"
                        />
                    <RelativeLayout
                        android:layout_width="@dimen/case_app_list_left_item_width"
                        android:background="@color/transparent"
                        android:layout_centerInParent="true"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dip"
                        >
                        <LinearLayout
                            android:layout_width="5dip"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:id="@+id/left_top_line"
                                android:layout_width="1dip"
                                android:layout_height="15dip"
                                android:background="@color/gray"
                                android:layout_marginLeft="2dip"
                                />
                            <ImageView
                                android:id="@+id/left_top_dot"
                                android:layout_width="5dip"
                                android:layout_height="5dip"
                                android:src="@drawable/img_new_message"
                                />
                            <RelativeLayout
                                android:layout_width="1dip"
                                android:layout_height="match_parent"
                                android:background="@color/gray"
                                android:layout_marginLeft="2dip"
                                />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dip"
                    android:layout_weight="4"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="385dip"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:id="@+id/image_rl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            >
                            <ImageView
                                android:id="@+id/image0"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:background="@drawable/test"
                                android:layout_marginRight="4dip"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>