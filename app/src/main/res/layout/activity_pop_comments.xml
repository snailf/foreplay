<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/comment_pop_margin_left"
        android:layout_marginRight="@dimen/comment_pop_margin_left"
        android:layout_height="@dimen/comment_pop_heigth"
        android:background="@drawable/shape_corner_light_white"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/transparent"
            >
            <!-- 图片 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_pop_image_margin_top"
                android:background="@color/transparent"
                >
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/comment_pop_image_size"
                    android:layout_height="@dimen/comment_pop_image_size"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/test"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_pop_text_height"
                android:text="-   来自前戏   -"
                android:textColor="@color/balck"
                android:textSize="16dip"
                android:gravity="center"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_pop_text_height"
                android:background="@drawable/shape_border_gray"
                android:layout_marginLeft="@dimen/comment_pop_text_margin_left"
                android:layout_marginRight="@dimen/comment_pop_text_margin_left"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/comment_pop_text_margin_left"
                    android:layout_marginRight="@dimen/comment_pop_text_margin_left"
                    android:background="@color/transparent"
                    android:gravity="left|center_vertical"
                    android:id="@+id/comments"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_pop_text_height"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:layout_marginTop="11dip"
                android:layout_marginLeft="@dimen/comment_pop_text_margin_left"
                android:layout_marginRight="@dimen/comment_pop_text_margin_left"
                >
                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textSize="16dip"
                    android:layout_marginRight="6dip"
                    android:textColor="@color/comment_btn_text_gray"
                    android:background="@drawable/selector_comment_btn_gray"
                    />
                <TextView
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="发送"
                    android:textSize="16dip"
                    android:layout_marginLeft="6dip"
                    android:textColor="@color/comment_btn_text_white"
                    android:background="@drawable/selector_comment_btn_green"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>